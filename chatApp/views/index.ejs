<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ChatApp</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
  </head>

  <body class="mt-3 container bg-light-subtle">
    <div id="areaJoinRoom">
      <h1 class="mb-3 text-danger">ChatApp</h1>
      <p id="deneme"> Selam </p>
      <p id="txtUsername"></p>
      <input
        class="form-control"
        type="text"
        id="txtRoomId"
        name="txtRoomId"
        placeholder="oda kodu"
      /><br />
      <button type="submit" class="btn btn-info" onclick="joinRoom()">
        Odaya Katıl</button
      ><br />
    </div>

    <div id="areaRoomScreen" style="display: none">
      <div class="container">
        <div class="row">
          <div class="col"></div>
          <div class="col">
            <div class="row">
              <div class="col"></div>
              <div class="col">
                <p class="mb-3">
                  <b
                    >Odadaki Kullanıcı Sayısı:
                    <span id="txtRoomUserCount"></span
                  ></b>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <h1 id="txtWelcomeRoom"></h1>
      <div class="row">
        <div class="col-3">
          <ul id="txtRoomUsers" class="list-group">
            <li class="list-group-item"></li>
          </ul>
        </div>
        <div class="col-9">
          <textarea
            name="txtMessage"
            id="txtMessage"
            rows="3"
            class="form-control"
          ></textarea>
          <button class="btn btn-info sendButton" onclick="sendMessage()">
            Mesaj Gönder
          </button>
          <br /><br /><br />
          <div id="messageList"></div>
        </div>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="client.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document.body.style.backgroundColor = "#E0E0E0";
      });
    </script>
    <script>
      if (localStorage.getItem("txtUsername") !== null)
        document.getElementById("txtUsername").value =
          localStorage.getItem("txtUsername");
    </script>
    <script>
      deneme.innerHTML =
      "<strong>Kullanıcı:</strong> " +
      '<span style="color: ' +
      "black" +
      ';">' +
      txtUsername.value +
      "</span>"; </script>
  </body>
</html>
