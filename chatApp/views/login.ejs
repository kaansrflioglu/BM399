<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ChatApp - Kullanıcı Girişi</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>

  <body class="mt-3 container bg-light-subtle">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-6">
          <h1 class="mb-3 text-danger">ChatApp</h1>
          <form id="loginForm">
            <div class="mb-3">
              <label for="txtUsername" class="form-label">Kullanıcı Adı</label>
              <input
                type="text"
                class="form-control"
                oninput="storeUsername()"
                id="txtUsername"
                name="txtUsername"
                required
              />
            </div>
            <div class="mb-3">
              <label for="txtPassword" class="form-label">Şifre</label>
              <input
                type="password"
                class="form-control"
                id="txtPassword"
                name="txtPassword"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
          </form>
        </div>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      document
        .getElementById("loginForm")
        .addEventListener("submit", function (event) {
          event.preventDefault();
          const username = document.getElementById("txtUsername").value;
          const password = document.getElementById("txtPassword").value;
          const credentials = { username, password }; 
          loginUser(credentials);
        });

      function loginUser(credentials) {
        fetch("/", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(credentials),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.success) {
              window.location.href = "/chat";
            } else {
              alert("Invalid username or password. Please try again.");
            }
          })
          .catch((error) => {
            console.error("Error:", error);
          });
      }
    </script>
    <script src="client.js"></script>
    <script>
      function storeUsername() {
        localStorage.setItem(
          "txtUsername",
          document.getElementById("txtUsername").value
        );
      }
    </script>
  </body>
</html>
